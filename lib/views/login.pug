extends ./layouts/login.pug

block content
  .container-fluid
    .row
      .col-xs-12.col-sm-8.col-sm-push-2.col-lg-4.col-lg-push-4
        .card.m-t-3
          .card-block
            form(action='/monoture/login', method='post')
              .form-group
                label Username
                input(type='text', name='username').form-control
              .form-group
                label Password
                input(type='password', name='password').form-control
              input(type='submit', value='Log In').btn.btn-primary-outline
