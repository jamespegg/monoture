extends ./layouts/main.pug

block content
  form(method='post', action='/monoture/post').flex-sm-1.flex-sm

    .flex-sm-1.bg-inverse.overflow-y.scrollbar-inverse
      .p-a-1
        h4 Properties
        .form-group
          label Published
          select.form-control.form-control-inverse(name='published')
            option(value="true", selected=post.published) Yes
            option(value="false", selected=!post.published) No
        .form-group
          label Slug
          input.form-control.form-control-inverse(value=post.slug, name='slug', placeholder="Slug")

    //- Post ID
    if post._id
      input(value=post._id, name='id', type='hidden')

    .flex-sm-4.flex-sm.flex-sm-column
      nav.navbar.navbar-light.navbar-full.bg-faded.flex-sm

        input.form-control-minimal.flex-sm-1(value=post.title, name='title', placeholder="Title", maxlength="120")

        .btn-group.pull-right
          a(href='/monoture').btn.btn-secondary.btn-sm
            i.fa.fa-angle-left
            |Cancel

          button.btn.btn-primary.btn-sm(type='submit')
            i.fa.fa-floppy-o
            |Save
      .flex-sm-1.flex-sm
        .flex-sm-1.flex-sm
          textarea.flex-sm-1.textarea-flush.p-a-1.scrollbar-teal(name='body', data-spy='markdown', data-target='#preview', placeholder='Start writing your blog post here.')= post.body
        .flex-sm-1.p-a-1.b-l-5.overflow-y.scrollbar-teal#preview
